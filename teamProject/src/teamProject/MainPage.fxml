          <CategoryAxis prefHeight="37.0" prefWidth="316.0" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis autoRanging="false" minorTickCount="1" minorTickVisible="false" side="LEFT" tickUnit="1.0" upperBound="10.0" />
        </yAxis>
      </BarChart>
